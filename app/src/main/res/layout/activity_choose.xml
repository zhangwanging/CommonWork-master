<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/ib_choose_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请选择工资类型"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />
    </LinearLayout>

    <include layout="@layout/text_view_padding_grey" />

    <LinearLayout
        android:id="@+id/ll_choose_ot_hour_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/choose_hour_work"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="小时工"
            android:textSize="@dimen/normal_string_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go" />
    </LinearLayout>

    <include layout="@layout/text_view_padding_grey" />

    <LinearLayout
        android:id="@+id/ll_choose_ot_month_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_click_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/choose_month_work"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="同工同酬"
            android:textSize="@dimen/normal_string_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go" />
    </LinearLayout>

    <include layout="@layout/text_view_padding_grey" />

</LinearLayout>
