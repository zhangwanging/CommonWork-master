<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_company_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="公司信息"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />

        <TextView
            android:id="@+id/tv_company_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="编辑"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHui"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_company_info_head"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#00000000"
                    android:src="@mipmap/ic_head_default" />
            </FrameLayout>


            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                chow:content="未填写"
                chow:money_layout="false"
                chow:title="公司名" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="2584061172"
                chow:money_layout="false"
                chow:title="手机号" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="未填写"
                chow:money_layout="false"
                chow:title="公司类型" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                chow:content="1999-07-05"
                chow:money_layout="false"
                chow:title="所在地" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="1999-07-05"
                chow:money_layout="false"
                chow:title="详细地址" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_linkman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="张三"
                chow:money_layout="false"
                chow:title="联系人" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_link_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="1234567890"
                chow:money_layout="false"
                chow:title="联系人手机号" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_company_info_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                chow:content="惠州学院"
                chow:money_layout="false"
                chow:title="邮箱" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:paddingLeft="12dp"
                android:paddingTop="15dp"
                android:text="公司描述："
                android:textSize="@dimen/normal_string_size" />

            <TextView
                android:id="@+id/ll_company_info_describes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="12dp"
                android:textSize="@dimen/small_string_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="营业执照许可证"
                    android:textSize="@dimen/normal_string_size" />

                <ImageView
                    android:id="@+id/iv_company_info_license"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/no_picture" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
