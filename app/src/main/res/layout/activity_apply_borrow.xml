<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/ib_borrow_apply_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_statistics_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我要借钱"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="借款金额"
            android:textSize="@dimen/normal_string_size" />

        <EditText
            android:id="@+id/et_borrow_apply_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/normal_string_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="借款人姓名："
            android:textSize="@dimen/normal_string_size" />

        <EditText
            android:id="@+id/et_borrow_apply_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="公 司 名："
            android:textSize="@dimen/normal_string_size" />

        <EditText
            android:id="@+id/et_borrow_apply_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="工 号："
            android:textSize="@dimen/normal_string_size" />

        <EditText
            android:id="@+id/et_borrow_apply_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="借款目的："
            android:textSize="@dimen/normal_string_size" />

        <EditText
            android:id="@+id/et_borrow_apply_purpose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="right"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/normal_string_size" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_borrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/colorPrimaryDark"
        android:text="我要借款"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_string_size" />
</LinearLayout>
