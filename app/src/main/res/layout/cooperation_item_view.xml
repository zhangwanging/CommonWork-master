<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
    android:background="@color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/image_bg_default"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_image"
            android:singleLine="true"
            android:textColor="@color/black3"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_image"
            android:singleLine="true"
            android:textColor="@color/black7"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_below="@+id/tv_region"
            android:layout_toRightOf="@+id/iv_image"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_aj_welfare"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:background="@drawable/shape_aj_welfare"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:background="@drawable/shape_aj_welfare"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/iv_image"
            android:background="@color/alpha_20_black"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_image"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/black7"
            android:textSize="10sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>