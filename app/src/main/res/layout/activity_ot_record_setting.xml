<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ot__record_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/ib_ot_record_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorHui" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/ll_ot_record_setting_hour_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        android:visibility="gone"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="小时工资设置" />

    <include layout="@layout/text_view_padding_grey" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/ll_ot_record_setting_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="加班工资设置" />

    <include layout="@layout/text_view_padding_grey" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/ll_ot_record_setting_allowance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="补贴设置" />

    <include layout="@layout/text_view_padding_grey" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/ll_ot_record_setting_cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="扣款设置" />

    <include layout="@layout/text_view_padding_grey" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/ll_ot_record_setting_help_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="代缴费设置" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorHui" />

    <com.hzu.jpg.commonwork.widgit.MyLinearLayout
        android:id="@+id/chongzhijiaban_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_grey"
        chow:money_layout="false"
        chow:src="@mipmap/go"
        chow:title="重置加班时间" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorHui" />

</LinearLayout>
